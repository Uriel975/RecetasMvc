
@{
    ViewBag.Title = "Publicaciones";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var Receta = (List<RecetaSpawn.Domain.BO.TblRecetaBO>)ViewBag.RecetaList;
}

<h2>Publicaciones</h2>

@if (Receta.Count > 0)
{
    foreach (RecetaSpawn.Domain.BO.TblRecetaBO item in Receta)
    {


        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <div class="card">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.RECETA</h5>
                        @item.TIEMPO
                    <p class="card-text">@item.INGREDIENTES</p>
                    <p class="card-text">@item.PREPARACION</p>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <h2>Ver Publicaciones</h2>

}

